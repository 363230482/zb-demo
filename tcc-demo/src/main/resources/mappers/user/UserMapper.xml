<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zb.tcc.mapper.user.UserMapper">

	<resultMap id="BaseResultMap" type="com.zb.tcc.domain.user.User">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="age" property="age" jdbcType="INTEGER" />
	</resultMap>

	<sql id="Common_Query">
		<where>
			<if test="id != null">
				AND id != #{id}
			</if>
			<if test="username != null and username != ''">
				AND username = #{username}
			</if>
		</where>
	</sql>

	<sql id="Base_Columns">
		id, username, age
	</sql>
	
	<select id="select" resultMap="BaseResultMap" parameterType="java.lang.Long">
		SELECT <include refid="Base_Columns" />
		FROM user
		WHERE id = #{id,jdbcType=BIGINT}
	</select>
	
	<select id="selectListByQuery" parameterType="com.zb.tcc.domain.user.query.UserQuery" resultMap="BaseResultMap">
		SELECT <include refid="Base_Columns" />
		FROM user
		<include refid="Common_Query" />
	</select>

	<select id="selectCountByQuery" parameterType="UserQuery" resultType="long">
		SELECT COUNT(*) FROM user <include refid="Common_Query" />
	</select>
	
	 <delete id="delete" parameterType="java.lang.Long">
		DELETE FROM user
		WHERE id = #{id,jdbcType=BIGINT}
	</delete>
	
	<insert id="insert" parameterType="com.zb.tcc.domain.user.User" keyProperty="userId" useGeneratedKeys="true">
		INSERT INTO user
		(
			username, age
		)
		VALUES (#{username,jdbcType=VARCHAR}, #{age,jdbcType=INTEGER})
	</insert>

	<update id="update" parameterType="com.zb.tcc.domain.user.User">
		UPDATE user
		<set>
			<if test="username != null and username != ''">
				username = #{username,jdbcType=VARCHAR},
			</if>
			<if test="age != null">
				age = #{age,jdbcType=INTEGER},
			</if>
		</set>
		<if test="id != null">
			WHERE id = #{id,jdbcType=BIGINT}
		</if>
	</update>
</mapper>